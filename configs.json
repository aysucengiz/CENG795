{
  "Configuration": {
    "Prints": {
      "Initialization": false,
      "AccelerationCreation": false,
      "Progress": true
    },
    "Raytracer": {
      "OutputDir": "outputs/",
      "Threads": {
        "Thread": "batch",
        "batchWidth": 16,
        "batchHeight": 16,
        "ThreadGroupSize": 100,
        "ThreadEndlAfter": 80000
      },
      "Logger": {
        "LogToFile": false,
        "LogToConsole": true,
        "LogDir": "logs/"
      }
    },
    "Acceleration": {
      "AccelerationStruct": "bvh",
      "MaxObjInNode": 16,
      "PivotType": "sah",
      "BackCulling": false
    },
    "Sampling": {
      "SamplingType": "stratified",
      "FilterType": "gaussian"
    },
    "Defaults": {
      "DefaultMaxDepth": 50,
      "DefaultShadowEps": 1e-3,
      "DefaultIntersEps": 1e-3
    }
  }
}